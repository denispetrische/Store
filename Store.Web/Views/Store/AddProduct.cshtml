@using Store.Web.Dtos.Product;

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ProductCreateDto;

<h1>Добавление продукта</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AddProduct" asp-controller="Store">

            <div class="form-floating">
                <input asp-for="Name" class="form-control" aria-required="true" />
                <label asp-for="Name">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Description" class="form-control" aria-required="true" />
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Amount" class="form-control" aria-required="true" />
                <label asp-for="Amount">Amount</label>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Price" class="form-control" aria-required="true" />
                <label asp-for="Price">Price</label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Currency" class="form-control" aria-required="true" />
                <label asp-for="Currency">Currency</label>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Добавить</button>
        </form>
    </div>
</div>

